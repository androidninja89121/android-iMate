<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

     <com.tieyouin.pager.JazzyViewPager
        android:id="@+id/jazzy_pager"
        android:layout_width="@dimen/pad_310dp"
        android:layout_height="@dimen/pad_350dp"
        android:background="@drawable/pager_bg"
        android:layout_marginTop="@dimen/pad_10dp" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:gravity="center" 
         android:orientation="horizontal">

         <Button
             style="@style/btn"
             android:id="@+id/btnUnlikne"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_unline" />
          <Button
             style="@style/btn"
             android:id="@+id/btnInfo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_info" />
           <Button
             style="@style/btn"
             android:id="@+id/btnLike"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_like" />

     </LinearLayout>

